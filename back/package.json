{
  "name": "tl.project-back",
  "version": "0.0.1",
  "description": "",
  "author": "t.kosminov",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node --files -r tsconfig-paths/register src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:dev": "nodemon",
    "start:build": "NODE_ENV=development node -r ts-node/register -r tsconfig-paths/register dist/main.js",
    "start:beta": "NODE_ENV=beta node -r ts-node/register -r tsconfig-paths/register dist/main.js",
    "start:rc": "NODE_ENV=rc node -r ts-node/register -r tsconfig-paths/register dist/main.js",
    "start:prod": "NODE_ENV=production node -r ts-node/register -r tsconfig-paths/register dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint-fix": "npm run lint -- --fix",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "db:migration:create": "npm run typeorm:cli -- migration:create ./src/database/migrations/created",
    "db:migration:run": "npm run typeorm:cli -- -d ./src/database/database-ormconfig.cli.ts migration:run",
    "db:schema:sync": "npm run typeorm:cli -- -d ./src/database/database-ormconfig.cli.ts schema:sync"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@nestjs/apollo": "^10.0.17",
    "@nestjs/common": "^9.0.3",
    "@nestjs/core": "^9.0.3",
    "@nestjs/graphql": "^10.0.18",
    "@nestjs/platform-express": "^9.0.3",
    "@nestjs/swagger": "^6.0.4",
    "@nestjs/typeorm": "^9.0.0",
    "apollo-server-express": "^3.10.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "config": "^3.3.7",
    "cookie-parser": "^1.4.6",
    "dataloader": "^2.1.0",
    "epub-parser-simple": "^0.1.5",
    "graphql": "^16.5.0",
    "graphql-tools": "^8.3.0",
    "hasha": "^5.2.2",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "nanoid": "^3.3.4",
    "nestjs-graphql-easy": "^3.0.0",
    "pg": "^8.7.3",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.6",
    "sharp": "^0.30.7",
    "transliteration": "^2.3.5",
    "typeorm": "^0.3.7",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/schematics": "^9.0.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.2",
    "@types/config": "^0.0.41",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^18.0.5",
    "@types/nodemon": "^1.19.1",
    "@types/pg": "^8.6.5",
    "@types/pluralize": "^0.0.29",
    "@types/sharp": "^0.30.4",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
